.search-pop-overlay {
  background-color: rgba(0, 0, 0, .3);
  display: none;
  height: 100%;
  left: 0;
  overflow: hidden;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 2080;
}

.search-popup {
  background: var(--bg-color, #fff);
  border-radius: 5px;
  color: var(--color, #111);
  display: none;
  height: 80%;
  left: 50%;
  margin-left: -350px;
  padding: 0;
  position: fixed;
  top: 10%;
  width: 700px;
  z-index: 9999;

  +mobile() {
    border-radius: 0;
    height: 100%;
    left: 0;
    margin: 0;
    padding: 0;
    top: 0;
    width: 100%;
  }

  .search-icon, .popup-btn-close {
    color: var(--color, #ddd);
    display: inline-block;
    font-size: 18px;
    height: 36px;
    padding-left: 10px;
    padding-right: 10px;
    width: 18px;
  }

  .popup-btn-close {
    border-left: 1px solid var(--border-color, #eee);
    cursor: pointer;
    float: right;
  }

  .search-header {
    background: var(--bg-color, #f5f5f5);
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    padding: 5px;
  }
}

  .search-loading-icon {
    margin: 20% auto 0 auto;
    text-align: center;
  }

  .search-popup {
    ul.search-result-list {
      margin: 0 5px;
      padding: 0;
    }

    p.search-result {
      border-bottom: 1px dashed var(--border-color, #ccc);
      padding: 5px 0;
    }

    a.search-result-title {
      font-weight: bold;
    }

    .search-keyword {
      border-bottom: 1px dashed var(--search-keyword-color, #f00);
      color: var(--search-keyword-color, #f00);
      font-weight: bold;
    }

    #search-result {
      height: calc(100% - 55px);
      overflow: auto;
      padding: 5px 25px;
      position: relative;
    }

    .search-input-container {
      display: inline-block;
      height: 36px;
      line-height: 36px;
      padding: 0 5px;
      position: absolute;
      width: calc(100% - 90px);

      input {
        color: var(--color, #111);
        background: transparent;
        border: 0;
        display: block;
        height: 20px;
        outline: none;
        padding: 8px 0;
        vertical-align: middle;
        width: 100%;
      }
    }

    .no-result,.no-keywords,.loading-data {
      color: var(--color, #eee);
      position: absolute;
      top: 50%;
      text-align: center;
      width: calc(100% - 50px);
    }
  }
